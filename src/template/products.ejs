<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Product List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>

  <%- include('header') %>

  <%- include('menu') %>

    <div class="container py-4">
  <div class="row g-4"> <% if (products && products.length > 0) { %>
      <% products.forEach(product=> { %>
        
        <div class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch">
          
          <div class="card h-100 shadow-sm">
            
            <img 
              src="../../assets/img/3.jpg" 
              class="card-img-top" 
              alt="<%= product.title %>" 
              style=" height: 220px; width: 220px;"
            >
            
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold">
                <%= product.title %>
              </h5>
              <p class="card-text flex-grow-1">
                <%= product.description %>
              </p>
              
              <a href="#" class="btn btn-primary mt-auto">
                Ver m√°s
              </a>
            </div>

            <div class="card-footer bg-light border-0 pt-0">
              <small class="text-muted">
                <strong>Docente:</strong> <%= product.docente %><br>
                <strong>Curso:</strong> <%= product.curso %>
              </small>
            </div>

          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12">
        <p class="text-center text-muted">No se encontraron proyectos para mostrar.</p>
      </div>
    <% } %>

  </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"></script>
</body>

</html>